load("@io_bazel_rules_go//go:def.bzl", "go_binary", "go_library")
load("@io_bazel_rules_docker//container:container.bzl", "container_image", "container_push")
load("@io_bazel_rules_docker//contrib:test.bzl", "container_test")
load("@io_bazel_rules_docker//go:image.bzl", "go_image")
load("//cmd:labels.bzl", "labels")

go_binary(
    name = "gh",
    embed = [":gh_lib"],
    pure = "on",
    static = "on",
    visibility = ["//visibility:public"],
)

go_library(
    name = "gh_lib",
    srcs = [
        "auth.go",
        "dump.go",
        "env.go",
        "gh.go",
        "main.go",
        "pr.go",
        "release.go",
    ],
    importpath = "github.com/whilp/world/cmd/gh",
    visibility = ["//visibility:private"],
    deps = [
        "@com_github_apex_log//:log",
        "@com_github_apex_log//handlers/cli",
        "@com_github_bradleyfalzon_ghinstallation//:ghinstallation",
        "@com_github_google_go_github_v32//github",
        "@com_github_google_go_github_v33//github",
        "@org_golang_x_oauth2//:oauth2",
    ],
)

go_image(
    name = "image",
    base = ":base",
    binary = ":gh",
    visibility = ["//visibility:public"],
)

container_image(
    name = "base",
    base = "@go_image_static//image",
    labels = labels({"org.opencontainers.image.description": "GitHub action"}),
)

container_push(
    name = "push",
    format = "Docker",
    image = ":image",
    registry = "ghcr.io",
    repository = "whilp/gh",
    tag = "latest",
)

container_test(
    name = "test",
    configs = ["test.json"],
    image = ":image",
)
